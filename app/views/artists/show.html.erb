<div class="container">
  <div class="row">
    <div class= "col-sm-12">
      <%= render 'navbar' %>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-sm-7 ">
        <h3 class="mt-4"><strong><%=@artist.name%></strong></h3>
        <h5 class="mt-4"><strong>Albums (<%=@albums.count%>)</strong></h5>
        <div class="row">
          <%@albums.each do |album|%>
            <div class="col-sm-3 pt-3">
              <div class="card h-100">
                <img class="card-img-album p-1" id="album" src="<%= album.image_url %>" alt="albums">
                <div class="card-body p-2">
                  <h6 class="card-title text-center"><strong><%= album.name %></strong></h6>
                  <p class="card-text"><%=album.released_at%></p>
                </div>
              </div>
            </div>
          <% end %>  
        </div>
      </div>

      <div class="col-sm-1"></div>

      <div class="col-sm-4">
        <img src="<%=@artist.image_url%>" alt="artistas" class="rounded img-artist mt-4" >
      </div>

    </div>
  </div>
</div>